<view class="container">
  <view class="register-box">
    <view class="title">注册</view>
    <van-cell-group>
      <van-field
        value="{{username}}"
        label="用户名"
        placeholder="请输入用户名"
        bind:change="onUsernameChange"
      />
      <van-field
        value="{{password}}"
        label="密码"
        type="password"
        placeholder="请输入密码"
        bind:change="onPasswordChange"
      />
      <van-field
        value="{{confirmPassword}}"
        label="确认密码"
        type="password"
        placeholder="请再次输入密码"
        bind:change="onConfirmPasswordChange"
      />
    </van-cell-group>
    <view class="btn-group">
      <van-button block type="info" bindtap="onRegister">注册</van-button>
    </view>
  </view>
</view> 