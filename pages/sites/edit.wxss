.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

.footer-action {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #ffffff;
  padding: 24rpx 32rpx calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.footer-btn {
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  font-size: 28rpx;
  color: #ffffff;
  background: #007AFF;
  border-radius: 8rpx;
}

/* 搜索弹窗样式 */
.search-container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.search-header {
  padding: 20rpx;
}

.search-results {
  flex: 1;
  overflow-y: auto;
}

.result-item {
  padding: 24rpx;
  border-bottom: 1px solid #eee;
}

.result-item:active {
  background: #f7f8fa;
}

.result-name {
  font-size: 28rpx;
  color: #323233;
  margin-bottom: 8rpx;
}

.result-address {
  font-size: 24rpx;
  color: #969799;
} 