page {
  background-color: #f7f7f7;
}

@import "../../common/chunk-vendors.wxss";
@import "../../common/routeplan.wxss";

.container {
  padding: 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
  background-color: #f7f7f7;
  box-sizing: border-box;
  padding-top: calc(env(safe-area-inset-top) + 30rpx);
}

.upload-section {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin: 30rpx 0;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.upload-btn {
  width: 300rpx !important;
  margin: 20rpx 0;
  background-color: #007AFF;
  color: #fff;
  border-radius: 40rpx;
  font-size: 32rpx;
  padding: 20rpx 0;
}

.preview-image {
  width: 80%;
  height: 240rpx;
  margin: 16rpx 0;
}

.info-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  gap: 20rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  margin-bottom: calc(200rpx + env(safe-area-inset-bottom));
}

.info-column {
  width: 100%;
  background-color: #ffffff;
  padding: 30rpx 24rpx;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  box-sizing: border-box;
}

.column-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.info-item {
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-start;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #999;
  flex-shrink: 0;
  width: 220rpx;
}

.value {
  font-size: 32rpx;
  color: #333;
  word-break: break-all;
  flex: 1;
  text-align: right;
  padding-left: 20rpx;
  line-height: 1.4;
}

.value.long-text {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  padding: 24rpx 24rpx calc(env(safe-area-inset-bottom) + 24rpx);
  box-sizing: border-box;
  border-top: 1rpx solid #eee;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 8rpx;
}

.price-item:last-child {
  margin-bottom: 0;
}

.price-label {
  font-size: 28rpx;
  color: #666;
}

.price-value {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.stepper {
  display: flex;
  align-items: center;
}

.stepper-btn {
  width: 60rpx;
  height: 60rpx;
  line-height: 56rpx;
  text-align: center;
  background-color: #f5f5f5;
  color: #333;
  font-size: 40rpx;
  border-radius: 8rpx;
  font-weight: bold;
}

.stepper-btn:active {
  background-color: #e0e0e0;
}

.stepper-value {
  margin: 0 30rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  min-width: 80rpx;
  text-align: center;
}

.total-price {
  margin-top: 24rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #eee;
}

.total-price .price-label {
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
}

.total-price .price-value {
  color: #ff4d4f;
  font-size: 40rpx;
}

.float-upload {
  position: fixed;
  right: 24rpx;
  bottom: calc(240rpx + env(safe-area-inset-bottom) + 24rpx);
  width: 88rpx;
  height: 88rpx;
  background-color: #007AFF;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  z-index: 100;
  transition: all 0.2s ease;
}

.float-upload:active {
  background-color: #0062cc;
  transform: scale(0.95);
}

.upload-icon {
  width: 44rpx;
  height: 44rpx;
}

.upload-text {
  color: #fff;
  font-size: 28rpx;
}

/* 货物信息卡片样式 */
.cargo-info {
  margin-bottom: 30rpx;
}

.cargo-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.cargo-item {
  display: flex;
  flex-direction: column;
}

.cargo-item.full-width {
  grid-column: 1 / -1;
}

.cargo-item .label {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 6rpx;
  width: auto;
}

.cargo-item .value {
  font-size: 32rpx;
  color: #333;
  text-align: left;
  padding-left: 0;
}

.bottom-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #eee;
}

.reupload-btn {
  margin: 0;
  padding: 0 32rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  color: #007AFF;
  background: #f0f8ff;
  border-radius: 32rpx;
  border: none;
  font-weight: normal;
}

.reupload-btn::after {
  border: none;
}

.total-price-wrapper {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.total-price-wrapper .price-label {
  font-size: 28rpx;
  color: #666;
}

.total-price-wrapper .price-value {
  color: #ff4d4f;
  font-size: 36rpx;
  font-weight: bold;
}

.route-select {
  margin: 20rpx 0;
}

.route-select .label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.select-group {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.select-item {
  padding: 12rpx 24rpx;
  border-radius: 8rpx;
  border: 1px solid #ddd;
  font-size: 26rpx;
  color: #666;
  background: #f5f5f5;
}

.select-item.active {
  background: #007AFF;
  color: #fff;
  border-color: #007AFF;
}

.tip-text {
  font-size: 28rpx;
  color: #999;
  text-align: center;
  margin: 40rpx 0;
}

.upload-section {
  margin-top: 40rpx;
}

.info-column {
  margin-bottom: 20rpx;
}

.route-select {
  margin-bottom: 30rpx;
}

.route-select:last-child {
  margin-bottom: 0;
}

.price-tag {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}