/* pages/profile/index.wxss */
.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding: 20px;
}

.user-info {
  background: #fff;
  border-radius: 8px;
  padding: 20px;
  display: flex;
  align-items: center;
  margin-bottom: 20px;
}

.avatar {
  margin-right: 20px;
  background: #f0f9ff;
  padding: 10px;
  border-radius: 50%;
}

.info {
  flex: 1;
}

.username {
  font-size: 18px;
  font-weight: bold;
  margin-bottom: 4px;
}

.role {
  font-size: 14px;
  color: #666;
}

.function-list {
  background: #fff;
  border-radius: 8px;
  margin-bottom: 20px;
}

.logout-section {
  margin-top: 30px;
  padding: 0 20px;
}

.logout-btn {
  border-radius: 8px !important;
}