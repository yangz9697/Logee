/* pages/analysis/index.wxss */
.container {
  min-height: 100vh;
  background: #f7f8fa;
}

.start-site {
  padding: 24rpx 32rpx 16rpx;
  font-size: 28rpx;
  color: #969799;
  background: #f7f8fa;
}

.line-item {
  background: #ffffff;
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 2rpx solid #f5f5f5;
}

.route-info {
  font-size: 28rpx;
  color: #323233;
  font-weight: 500;
}

.capacity-info {
  display: flex;
  align-items: center;
  gap: 32rpx;
}

.value {
  font-size: 28rpx;
  color: #323233;
}

.value.warning {
  color: #ff976a;
}

.value.error {
  color: #ee0a24;
}