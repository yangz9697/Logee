/* pages/analysis/index.wxss */
.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding: 20rpx;
}

.start-site {
  background: #fff;
  margin-bottom: 2rpx;
}

.site-header {
  padding: 24rpx 32rpx;
  font-size: 28rpx;
  color: #323233;
  font-weight: 500;
}

.flow-container {
  background: #fff;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.flow-header {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.flow-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.line-row {
  display: flex;
  border-bottom: 2rpx solid #f5f5f5;
}

.line-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.line-item:last-child {
  border-bottom: none;
}

.line-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.route-name {
  font-size: 28rpx;
  color: #333;
}

.site-name {
  font-size: 28rpx;
  color: #323233;
}

.capacity {
  font-size: 28rpx;
  color: #323233;
}

.capacity.warning {
  color: #ff976a;
}

.capacity.error {
  color: #ee0a24;
}

.status-container {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.status-text {
  font-size: 24rpx;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
}

.status-red {
  color: #ff4d4f;
  background: #fff1f0;
}

.status-yellow {
  color: #faad14;
  background: #fffbe6;
}

.status-green {
  color: #52c41a;
  background: #f6ffed;
}

.status-switch {
  min-width: 160rpx;
}

.status-tags {
  display: flex;
  gap: 8rpx;
}

.status-tag {
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
  font-size: 22rpx;
  border: 1rpx solid transparent;
  min-width: 44rpx;
  text-align: center;
  opacity: 0.6;
}

.status-tag.active {
  opacity: 1;
  font-weight: 500;
}

.status-tag-green {
  color: #07c160;
  background: #e8f8eb;
  border-color: #07c160;
}

.status-tag-green.active {
  background: #f6ffed;
  border-color: #52c41a;
}

.status-tag-yellow {
  color: #ff976a;
  background: #fef3eb;
  border-color: #ff976a;
}

.status-tag-yellow.active {
  background: #fffbe6;
  border-color: #faad14;
}

.status-tag-red {
  color: #ee0a24;
  background: #fde8e8;
  border-color: #ee0a24;
}

.status-tag-red.active {
  background: #fff1f0;
  border-border: #ff4d4f;
}

.order-list {
  margin-top: 16rpx;
  border-top: 1rpx solid #eee;
  padding-top: 12rpx;
}

.order-item {
  display: grid;
  grid-template-columns: 1fr 2fr 1fr 1fr 2fr;
  gap: 16rpx;
  padding: 12rpx;
  font-size: 24rpx;
  color: #333;
  border-bottom: 1rpx solid #f5f5f5;
  background: #fafafa;
}

.order-item:first-child {
  border-radius: 8rpx 8rpx 0 0;
}

.order-item:last-child {
  border-bottom: none;
  border-radius: 0 0 8rpx 8rpx;
}

.order-cell {
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.route-info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.cargo-tag {
  font-size: 22rpx;
  color: #1890ff;
  background: #e6f7ff;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  border: 1rpx solid #91d5ff;
}

/* 添加新样式 */
.line-meta {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.followers {
  display: flex;
  gap: 8rpx;
}

.follower-tag {
  font-size: 22rpx;
  color: #666;
  background: #f5f5f5;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.swipe-actions {
  height: 100%;
  display: flex;
}

.swipe-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 130rpx;
  height: 100%;
  color: #fff;
  font-size: 24rpx;
}

.follow {
  background-color: #07c160;
}

.unfollow {
  background-color: #ff976a;
}

