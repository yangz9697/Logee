.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding: 24rpx;
}

.waybill-info {
  background: #fff;
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.label {
  color: #969799;
  font-size: 28rpx;
  margin-right: 16rpx;
}

.value {
  color: #323233;
  font-size: 28rpx;
}

.loading {
  margin: 48rpx auto;
  text-align: center;
}

.timeline {
  background: #fff;
  padding: 24rpx;
  border-radius: 12rpx;
}

.timeline-item {
  position: relative;
  padding-left: 24rpx;
  padding-bottom: 32rpx;
  border-left: 2rpx solid #ebedf0;
}

.timeline-item:last-child {
  padding-bottom: 0;
}

.timeline-item::before {
  content: '';
  position: absolute;
  left: -8rpx;
  top: 8rpx;
  width: 12rpx;
  height: 12rpx;
  background: #007AFF;
  border-radius: 50%;
}

.time {
  font-size: 24rpx;
  color: #969799;
  margin-bottom: 8rpx;
}

.content {
  font-size: 28rpx;
  color: #323233;
  line-height: 1.5;
} 