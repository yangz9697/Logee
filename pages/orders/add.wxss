.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding: 24rpx;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

.card {
  background: #ffffff;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #ffffff;
  padding: 24rpx 32rpx calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.submit-btn {
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  font-size: 32rpx;
  color: #ffffff;
  background: #007AFF;
  border-radius: 8rpx;
}

.specs-input {
  display: flex;
  align-items: center;
  gap: 8rpx;
  width: 100%;
  justify-content: space-between;
}

.specs-input .van-field {
  flex: 1;
}

.separator {
  color: #969799;
  padding: 0 4rpx;
}

.station-picker {
  padding: 32rpx;
  max-height: 60vh;
}

.station-picker-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 32rpx;
}

.station-picker-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #323233;
}

.station-list {
  max-height: calc(60vh - 100rpx);
  overflow-y: auto;
}

.station-item {
  border-bottom: 2rpx solid #f5f7fa;
}

.station-name {
  font-size: 28rpx;
  color: #323233;
  padding: 24rpx 0;
}

.station-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.station-city {
  font-size: 24rpx;
  color: #969799;
}

.station-location {
  font-size: 24rpx;
  color: #c8c9cc;
}

.radio-group {
  display: flex;
  gap: 32rpx;
}

.radio-group .van-radio {
  margin-right: 0;
}

/* 站点选择样式 */
.station-section {
  background: #ffffff;
  padding: 24rpx;
}

.station-group {
  margin-bottom: 24rpx;
}

.station-group:last-child {
  margin-bottom: 0;
}

.station-label {
  font-size: 28rpx;
  color: #646566;
  margin-bottom: 16rpx;
}

.destination-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20rpx;
  width: 100%;
}

.grid-item {
  background: #f7f8fa;
  border-radius: 8rpx;
  padding: 20rpx 16rpx;
  text-align: center;
  transition: all 0.3s;
}

.grid-item.active {
  background: #e8f3ff;
  color: #007AFF;
}

.city-name {
  font-size: 28rpx;
}

/* 统一单元格中的radio-group样式 */
.van-cell .van-radio-group {
  width: 100%;
  display: flex;
  justify-content: flex-end;
}

/* 全局字体大小调整 */
.van-cell__title {
  font-size: 34rpx !important;
}

.van-cell__value {
  font-size: 34rpx !important;
}

.van-field__input {
  font-size: 34rpx !important;
}

.van-field__placeholder {
  font-size: 30rpx !important;
}

.van-radio__label {
  font-size: 34rpx !important;
}

/* 地址输入框样式 */
.van-field__input {
  word-break: break-all !important;
  white-space: pre-wrap !important;
  min-height: 24px !important;
}

/* 调整地址字段的右侧内容宽度 */
.van-field__value {
  flex: 1 !important;
  text-align: right !important;
}

/* 调整地址字段的标签宽度 */
.van-field__label {
  max-width: 6.2em !important;
  min-width: 6.2em !important;
}

/* 日期选择器样式 */
.van-datetime-picker {
  --picker-option-font-size: 32rpx;
  --picker-action-button-padding: 0 32rpx;
}

.van-picker__title {
  font-size: 32rpx;
  font-weight: 500;
  color: #323233;
}

.van-picker__confirm, .van-picker__cancel {
  font-size: 32rpx;
  padding: 0 32rpx;
}

.van-picker__confirm {
  color: #007AFF;
}

.van-picker__cancel {
  color: #969799;
} 