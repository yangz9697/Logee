.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding: 48rpx 32rpx;
}

.login-box {
  background: #fff;
  border-radius: 12rpx;
  padding: 32rpx;
  margin-top: 20vh;
}

.title {
  font-size: 36rpx;
  font-weight: 500;
  color: #323233;
  margin-bottom: 32rpx;
  text-align: center;
}

.btn-group {
  margin-top: 48rpx;
}

.register-link {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 48rpx;
  text-align: center;
  font-size: 28rpx;
  color: #969799;
}

.register-link .link {
  color: #007AFF;
  margin-left: 8rpx;
} 