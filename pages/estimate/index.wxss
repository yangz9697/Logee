page {
  background: #fff;
}

.container {
  min-height: 100vh;
  background: #fff;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  padding: 30rpx 30rpx 0;
}

.upload-section {
  flex: 1;
  width: 100%;
  background: #f5f5f5;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 30rpx;
  min-height: 300rpx;
  border: 2rpx dashed #ddd;
  padding: 20rpx;
  box-sizing: border-box;
}

.upload-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  cursor: pointer;
  padding: 40rpx;
}

.upload-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 24rpx;
  opacity: 0.6;
}

.upload-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.upload-desc {
  font-size: 24rpx;
  color: #999;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  object-fit: contain;
  background: #fff;
}

.bottom-fixed {
  position: relative;
  width: 100%;
  padding: 0 0 env(safe-area-inset-bottom);
  background: #fff;
  box-sizing: border-box;
}

.station-section {
  background: #fff;
  box-shadow: none;
  box-sizing: border-box;
  width: 100%;
}

.station-row {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.station-item {
  flex: 1;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.picker {
  height: 88rpx;
  line-height: 88rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: #333;
  text-align: center;
}

.picker.disabled {
  color: #999;
  background: #f0f0f0;
}

.bottom-row {
  display: none;
}

.bottom-content {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.fee-input {
  margin-top: 20rpx;
}

.fee-input input {
  height: 88rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  text-align: center;
}

.next-btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  background: #007AFF;
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  padding: 0;
  margin: 0;
  font-weight: 500;
  box-shadow: 0 4rpx 8rpx rgba(0, 122, 255, 0.2);
  text-align: center;
  display: flex;
  align-items: center;
  justify-content: center;
}

.next-btn[disabled] {
  background: #ccc;
  color: rgba(255, 255, 255, 0.8);
  box-shadow: none;
}

.city-select {
  margin-bottom: 30rpx;
}

.radio-group {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-top: 16rpx;
}

.radio-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  transition: all 0.3s;
}

.radio-item radio {
  margin-right: 8rpx;
  transform: scale(0.8);
}

/* 自定义 radio 样式 */
.wx-radio-input {
  border-radius: 50% !important;
  width: 32rpx !important;
  height: 32rpx !important;
}

.wx-radio-input.wx-radio-input-checked {
  background: #007AFF !important;
  border-color: #007AFF !important;
}

/* 选中状态的文本样式 */
.radio-item.checked {
  background: rgba(0, 122, 255, 0.1);
}

.station-section {
  border-radius: 0;
}

.price-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 24rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  margin: 20rpx 0;
}

.price-info .label {
  margin-bottom: 0;
  font-size: 26rpx;
  color: #999;
}

.price-info .price {
  font-size: 30rpx;
  color: #666;
  font-weight: 400;
}

/* 当有图片时的样式 */
.upload-section.has-image {
  padding: 0;
  border: none;
  background: #fff;
  display: block;
  height: 60vh;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 8rpx;
  object-fit: contain;
  background: #fff;
} 