page {
  background: #fff;
}

.container {
  min-height: 100vh;
  background: #f7f8fa;
  display: flex;
  flex-direction: column;
}

.upload-section {
  min-height: 480rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ffffff;
  margin: 24rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.has-image {
  padding: 16rpx;
}

.preview-image {
  width: 100%;
  height: 600rpx;
  border-radius: 8rpx;
}

.upload-btn {
  width: 100% !important;
  min-height: 480rpx !important;
  background: #ffffff;
  border: 2rpx dashed #e8e8e8;
  border-radius: 8rpx;
  transition: all 0.3s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.upload-btn:active {
  background: #f7f8fa;
  border-color: #007AFF;
}

.upload-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
  padding: 48rpx;
}

.upload-title {
  font-size: 32rpx;
  color: #1a1a1a;
  font-weight: 500;
}

.upload-desc {
  font-size: 24rpx;
  color: #969799;
}

.bottom-fixed {
  margin-top: auto;
  padding: 32rpx;
  background: #ffffff;
}

.transit-price {
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  color: #969799;
  display: flex;
  gap: 8rpx;
  justify-content: center;
}

.van-cell-group {
  background: transparent !important;
}

.van-cell {
  background: transparent !important;
}

.van-cell::after {
  border: none !important;
}

.station-row {
  padding: 28rpx 32rpx !important;
}

.station-group {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-bottom: 28rpx;
}

.station-group:last-child {
  margin-bottom: 0;
}

.station-label {
  font-size: 32rpx;
  color: #646566;
  margin-bottom: 20rpx;
}

.radio-group {
  display: flex;
  flex-wrap: wrap;
  gap: 48rpx;
}

.radio-item {
  margin: 0 !important;
  padding: 16rpx 0 !important;
}

.van-radio__label {
  color: #323233 !important;
  font-size: 32rpx !important;
  padding-left: 8rpx !important;
}

.van-radio__icon {
  font-size: 36rpx !important;
}

.van-radio__icon--checked {
  background-color: #007AFF !important;
  border-color: #007AFF !important;
  color: #ffffff !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  border-radius: 999px !important;
  width: 44rpx !important;
  height: 44rpx !important;
}

.van-radio__icon--checked .van-icon {
  color: #ffffff !important;
  font-size: 28rpx !important;
}

.van-icon-photo-o {
  font-size: 48rpx !important;
  color: #007AFF !important;
  margin-bottom: 16rpx !important;
}

.next-btn {
  margin-top: 32rpx !important;
  height: 88rpx !important;
  line-height: 88rpx !important;
  font-size: 32rpx !important;
} 