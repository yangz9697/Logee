<view class="container">
  <!-- 顶部图片上传区域 -->
  <view class="upload-section {{tempImagePath ? 'has-image' : ''}}">
    <image 
      wx:if="{{tempImagePath}}" 
      class="preview-image" 
      src="{{tempImagePath}}" 
      mode="aspectFit"
    />
    <view class="upload-area" wx:else bindtap="chooseImage">
      <image class="upload-icon" src="/assets/icons/upload.png" />
      <text class="upload-title">点击上传运满满截图</text>
      <text class="upload-desc">支持jpg、png格式</text>
    </view>
  </view>

  <!-- 底部固定区域 -->
  <view class="bottom-fixed">
    <!-- 站点选择区域 -->
    <view class="station-section">
      <!-- 始发城市 -->
      <view class="city-select">
        <text class="label">始发城市</text>
        <radio-group class="radio-group" bindchange="onStartPointChange">
          <label class="radio-item" wx:for="{{origins}}" wx:key="city">
            <radio value="{{index}}" checked="{{startPointIndex == index}}" />
            <text>{{item.city}}</text>
          </label>
        </radio-group>
      </view>

      <!-- 到达城市 -->
      <view class="city-select">
        <text class="label">到达城市</text>
        <radio-group class="radio-group" bindchange="onEndPointChange">
          <label class="radio-item" wx:for="{{destinations}}" wx:key="city">
            <radio value="{{index}}" checked="{{endPointIndex == index}}" />
            <text>{{item.city}}</text>
          </label>
        </radio-group>
      </view>

      <!-- 联运价格展示 -->
      <view class="price-info" wx:if="{{currentPrice}}">
        <text class="label">联运价格/吨</text>
        <text class="price">¥{{currentPrice}}</text>
      </view>

      <!-- 开始估价按钮 -->
      <button 
        class="next-btn" 
        bindtap="onNextStep"
        disabled="{{!canProceed}}"
      >开始估价</button>
    </view>
  </view>
</view> 