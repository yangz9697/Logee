<view class="container">
  <van-loading wx:if="{{isLoading}}" type="spinner" color="#007AFF" vertical>加载中...</van-loading>

  <block wx:else>
    <!-- 提货信息卡片 -->
    <van-cell-group custom-class="card" bindtap="showPickupRoute">
      <view class="card-header">
        <text class="card-title">提货信息</text>
        <text class="card-station">{{origin.name}}</text>
      </view>
      <van-cell title="装货地址" value="{{loadingAddress}}" />
      <van-cell title="接货距离" value="{{pickupDistance}}" />
    </van-cell-group>

    <!-- 送货信息卡片 -->
    <van-cell-group custom-class="card" bindtap="showDeliveryRoute">
      <view class="card-header">
        <text class="card-title">送货信息</text>
        <text class="card-station">{{destination.name}}</text>
      </view>
      <van-cell title="卸货地址" value="{{unloadingAddress}}" />
      <van-cell title="送货距离" value="{{deliveryDistance}}" />
    </van-cell-group>

    <!-- 底部价格栏 -->
    <view class="bottom-bar">
      <!-- 吨位 -->
      <view class="price-item">
        <text class="price-label">吨位</text>
        <van-stepper
          value="{{weight}}"
          step="0.1"
          decimal-length="1"
          min="0.1"
          input-width="220rpx"
          button-size="56rpx"
          bind:change="onWeightChange"
        />
      </view>
      
      <!-- 打托数 -->
      <view class="price-item">
        <text class="price-label">打托数</text>
        <van-stepper
          value="{{palletCount}}"
          integer
          min="0"
          input-width="220rpx"
          button-size="56rpx"
          bind:change="onPalletCountChange"
        />
      </view>

      <!-- 提货费用 -->
      <view class="price-item">
        <text class="price-label">提货费用</text>
        <van-stepper
          value="{{pickupPrice}}"
          integer
          step="10"
          min="0"
          input-width="220rpx"
          button-size="56rpx"
          bind:change="onPickupPriceChange"
        />
      </view>

      <!-- 送货费用 -->
      <view class="price-item">
        <text class="price-label">送货费用</text>
        <van-stepper
          value="{{deliveryPrice}}"
          integer
          step="10"
          min="0"
          input-width="220rpx"
          button-size="56rpx"
          bind:change="onDeliveryPriceChange"
        />
      </view>

      <!-- 总报价 -->
      <view class="price-item">
        <text class="price-label">总报价</text>
        <van-stepper
          value="{{totalQuote}}"
          integer
          step="100"
          min="0"
          input-width="220rpx"
          button-size="56rpx"
          bind:change="onTotalQuoteChange"
        />
      </view>

      <!-- 预估净得 -->
      <view class="bottom-row">
        <view class="net-profit">
          <text class="label">预估净得</text>
          <text class="value">¥{{netProfit}}</text>
        </view>
        <van-button 
          custom-class="reupload-btn" 
          type="info" 
          plain 
          bind:click="onBack"
        >再次使用估价</van-button>
      </view>

      <!-- 计算过程 -->
      <view class="calculation">
        <text class="detail">计算过程：{{totalQuote}}-{{pickupPrice}}-{{transitPrice}}×{{weight}}-{{deliveryPrice}}-{{palletCount}}×30</text>
      </view>
    </view>
  </block>
</view> 