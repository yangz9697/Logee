<view class="container">
  <map 
    id="map"
    class="map"
    longitude="{{longitude}}"
    latitude="{{latitude}}"
    scale="{{scale}}"
    markers="{{markers}}"
    polyline="{{polyline}}"
    show-location
  ></map>
  <view class="info-panel">
    <view class="route-info">
      <text class="distance">总距离：{{distance}}公里</text>
      <text class="duration">预计时间：{{duration}}分钟</text>
    </view>
    <view class="address-info">
      <view class="start">
        <text class="label">起点：</text>
        <text class="value">{{startAddress}}</text>
      </view>
      <view class="end">
        <text class="label">终点：</text>
        <text class="value">{{endAddress}}</text>
      </view>
    </view>
  </view>
</view> 