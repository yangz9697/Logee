.container {
  width: 100%;
  height: 100vh;
  position: relative;
}

.map {
  width: 100%;
  height: 100%;
}

.info-panel {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 30rpx;
  padding-bottom: calc(env(safe-area-inset-bottom) + 30rpx);
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.08);
  border-radius: 24rpx 24rpx 0 0;
}

.route-info {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.distance, .duration {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.address-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.start, .end {
  display: flex;
  align-items: flex-start;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 100rpx;
  flex-shrink: 0;
}

.value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
} 