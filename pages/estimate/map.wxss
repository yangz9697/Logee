.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f7f8fa;
}

.map {
  flex: 1;
  width: 100%;
}

.info-panel {
  background: #ffffff !important;
  border-radius: 16rpx 16rpx 0 0 !important;
  overflow: hidden;
  padding-bottom: env(safe-area-inset-bottom);
}

.route-info {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #eee;
}

.distance, .duration {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.address-info {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.start, .end {
  display: flex;
  align-items: flex-start;
}

.label {
  font-size: 28rpx;
  color: #666;
  width: 100rpx;
  flex-shrink: 0;
}

.value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
} 