/* pages/estimate/detail.wxss */
.container {
  min-height: 100vh;
  background: #fff;
  padding-bottom: env(safe-area-inset-bottom);
}

/* 货物信息卡片 */
.info-column {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.column-title {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cargo-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.cargo-item {
  display: flex;
  flex-direction: column;
}

.cargo-item.full-width {
  grid-column: 1 / -1;
}

.cargo-item .label {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.cargo-item .value {
  font-size: 32rpx;
  color: #333;
}

/* 提货和送货信息 */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-item .label {
  font-size: 28rpx;
  color: #999;
  width: 160rpx;
  flex-shrink: 0;
}

.info-item .value {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  text-align: right;
}

.info-item .value.long-text {
  word-break: break-all;
}

/* 价格标签 */
.price-tag {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}

/* 底部价格栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #fff;
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 10rpx rgba(0,0,0,0.05);
  box-sizing: border-box;
}

.price-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.price-item:last-child {
  margin-bottom: 0;
}

.price-label {
  font-size: 28rpx;
  color: #666;
}

.price-value {
  font-size: 32rpx;
  color: #ff4d4f;
  font-weight: bold;
}

/* 价格调整器 */
.stepper {
  display: flex;
  align-items: center;
}

.stepper-btn {
  width: 60rpx;
  height: 60rpx;
  line-height: 56rpx;
  text-align: center;
  background: #f5f5f5;
  color: #333;
  font-size: 40rpx;
  border-radius: 8rpx;
}

.stepper-value {
  margin: 0 30rpx;
  font-size: 32rpx;
  color: #333;
  min-width: 80rpx;
  text-align: center;
}

/* 底部操作区 */
.bottom-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #eee;
}

.total-price-wrapper {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.reupload-btn {
  padding: 0 32rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 28rpx;
  color: #007AFF;
  background: #f0f8ff;
  border-radius: 32rpx;
  border: none;
}

.reupload-btn::after {
  border: none;
}