/* pages/estimate/detail.wxss */
.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding: 24rpx;
  padding-bottom: calc(280rpx + env(safe-area-inset-bottom));
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* 卡片样式 */
.card {
  margin-bottom: 24rpx !important;
  border-radius: 12rpx !important;
  overflow: hidden;
  background: #ffffff;
}

.card-header {
  padding: 24rpx 32rpx 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #f5f7fa;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1a1a1a;
}

.card-station {
  font-size: 26rpx;
  color: #007AFF;
}

/* 单元格样式 */
.van-cell {
  padding: 16rpx 32rpx !important;
}

.van-cell__title {
  flex: none !important;
  min-width: 140rpx !important;
  color: #666666 !important;
  font-size: 28rpx !important;
}

.van-cell__value {
  color: #666666 !important;
  overflow: hidden !important;
  white-space: nowrap !important;
  text-overflow: ellipsis !important;
  flex: 1 !important;
  font-size: 28rpx !important;
  padding-right: 0 !important;
}

/* 移除最后一个单元格的下边距 */
.van-cell:last-child {
  padding-bottom: 24rpx !important;
}

/* 底部价格栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #ffffff;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

/* 建议报价样式 */
.suggest-price {
  padding: 32rpx;
  text-align: center;
  background: #f0f9ff;
  border-bottom: 2rpx solid #e8f4ff;
}

.suggest-price .label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 12rpx;
  display: block;
}

.suggest-price .value {
  font-size: 48rpx;
  color: #007AFF;
  font-weight: 500;
  display: block;
}

/* 价格项样式 */
.price-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  justify-content: space-between;
}

.price-label {
  font-size: 28rpx;
  color: #646566;
}

/* 步进器样式 */
.van-stepper {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.van-stepper__input {
  background-color: #f7f8fa !important;
  color: #323233 !important;
  font-size: 28rpx !important;
  height: 64rpx !important;
  margin: 0 8rpx !important;
}

.van-stepper__minus,
.van-stepper__plus {
  background-color: #f0f2f5 !important;
  width: 64rpx !important;
  height: 64rpx !important;
}

.van-stepper__minus--disabled,
.van-stepper__plus--disabled {
  background-color: #f7f8fa !important;
  color: #c8c9cc !important;
}

/* 按钮行样式 */
.button-row {
  padding: 28rpx 32rpx;
  border-top: 2rpx solid #f5f7fa;
  text-align: center;
}

/* 按钮样式 */
.reupload-btn {
  width: 320rpx !important;
  height: 72rpx !important;
  line-height: 70rpx !important;
}