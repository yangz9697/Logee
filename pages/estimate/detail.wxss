/* pages/estimate/detail.wxss */
.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding: 24rpx;
  padding-bottom: calc(280rpx + env(safe-area-inset-bottom));
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

/* 卡片样式 */
.card {
  margin-bottom: 24rpx !important;
  border-radius: 12rpx !important;
  overflow: hidden;
  background: #ffffff;
}

.card-header {
  padding: 24rpx 32rpx 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #f5f7fa;
}

.card-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1a1a1a;
}

.card-station {
  font-size: 26rpx;
  color: #007AFF;
}

/* 单元格样式 */
.van-cell {
  padding: 16rpx 32rpx !important;
}

.van-cell__title {
  flex: none !important;
  min-width: 140rpx !important;
  color: #666666 !important;
  font-size: 28rpx !important;
}

.van-cell__value {
  color: #666666 !important;
  overflow: hidden !important;
  white-space: nowrap !important;
  text-overflow: ellipsis !important;
  flex: 1 !important;
  font-size: 28rpx !important;
  padding-right: 0 !important;
}

/* 移除最后一个单元格的下边距 */
.van-cell:last-child {
  padding-bottom: 24rpx !important;
}

/* 底部价格栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: #ffffff;
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
  z-index: 100;
}

/* 价格项样式 */
.price-item {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  justify-content: space-between;
}

.price-label {
  font-size: 28rpx;
  color: #646566;
}

/* 货物信息项样式 */
.price-item:nth-child(-n+2) {
  padding: 20rpx 32rpx;
  background: #f7f8fa;
}

.price-item:nth-child(-n+2) .price-label {
  font-size: 26rpx;
  color: #969799;
}

.price-item:nth-child(-n+2) .van-stepper__input {
  background-color: #ffffff !important;
  font-size: 26rpx !important;
}

.price-item:nth-child(-n+2) .van-stepper__minus,
.price-item:nth-child(-n+2) .van-stepper__plus {
  background-color: #ffffff !important;
  width: 48rpx !important;
  height: 48rpx !important;
}

/* 步进器样式 */
.van-stepper {
  flex: 1;
  display: flex;
  justify-content: flex-end;
}

.van-stepper__input {
  background-color: #f7f8fa !important;
  color: #323233 !important;
  font-size: 28rpx !important;
  height: 64rpx !important;
  margin: 0 8rpx !important;
}

.van-stepper__minus,
.van-stepper__plus {
  background-color: #f0f2f5 !important;
  width: 64rpx !important;
  height: 64rpx !important;
}

.van-stepper__minus--disabled,
.van-stepper__plus--disabled {
  background-color: #f7f8fa !important;
  color: #c8c9cc !important;
}

/* 底部行样式 */
.bottom-row {
  padding: 28rpx 32rpx;
  border-top: 2rpx solid #f5f7fa;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: -28rpx;
}

/* 预净得样式 */
.net-profit {
  display: flex;
  flex-direction: column;
}

.net-profit .label {
  font-size: 28rpx;
  color: #666666;
  margin-bottom: 8rpx;
}

.net-profit .value {
  font-size: 36rpx;
  color: #ff4d4f;
  font-weight: 500;
}

/* 计算过程样式 */
.calculation {
  padding: 0 32rpx 16rpx;
}

.calculation .detail {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.4;
}

/* 按钮样式 */
.reupload-btn {
  min-width: 200rpx !important;
  height: 72rpx !important;
  line-height: 70rpx !important;
}