/* pages/routes/index.wxss */
.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

.route-info {
  font-size: 24rpx;
  color: #969799;
}

.route-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.route-name {
  font-size: 28rpx;
  color: #323233;
  flex: 1;
}

.price {
  color: #ee0a24;
  font-weight: 500;
  font-size: 24rpx;
}

.capacity {
  color: #969799;
  font-size: 24rpx;
}

.delete-btn {
  width: 65px;
  height: 100%;
  background-color: #ee0a24;
  color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

.footer-action {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #ffffff;
  padding: 24rpx 32rpx calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.footer-btn {
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  font-size: 28rpx;
  color: #ffffff;
  background: #007AFF;
  border-radius: 8rpx;
}

.route-cell {
  padding: 24rpx !important;
}

.route-cell__title {
  flex: 1 !important;
  padding-right: 48rpx !important;
}

.route-cell__value {
  flex: none !important;
}

.card {
  margin: 24rpx;
  background: #ffffff;
  border-radius: 8rpx;
  overflow: hidden;
}

.station-section {
  padding: 32rpx;
}

.station-group {
  margin-bottom: 40rpx;
}

.station-group:last-child {
  margin-bottom: 0;
}

.station-label {
  font-size: 28rpx;
  color: #323233;
  margin-bottom: 24rpx;
  font-weight: 500;
}

.destination-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.grid-item {
  width: calc((100% - 48rpx) / 3);
  height: 64rpx;
}

.grid-item view {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f7f8fa;
  border-radius: 4rpx;
}

.grid-item.active view {
  background: #e8f3ff;
  color: #007AFF;
}

.city-name {
  font-size: 28rpx;
  color: #323233;
}

.grid-item.active view .city-name {
  color: #007AFF;
}

.line-info {
  padding: 32rpx;
  border-top: 2rpx solid #f5f5f5;
  margin-top: 24rpx;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.label {
  font-size: 28rpx;
  color: #323233;
  margin-right: 16rpx;
}

.value {
  font-size: 28rpx;
  color: #969799;
}

.value-edit {
  display: flex;
  align-items: center;
  color: #007AFF;
  font-size: 28rpx;
}

.price-input, .capacity-input {
  width: 120rpx;
  text-align: center;
  margin: 0 8rpx;
  padding: 4rpx 0;
  border-bottom: 2rpx solid #ebedf0;
}

.price-input {
  color: #007AFF;
}

.capacity-input, .value {
  color: #323233;
}

.footer-btns {
  display: flex;
  gap: 24rpx;
}

.delete-btn {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  height: 72rpx;
  color: #ee0a24;
  font-size: 28rpx;
  background: #fff;
  border: 2rpx solid #ee0a24;
  border-radius: 8rpx;
}

.add-btn {
  flex: 1;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  font-size: 28rpx;
  color: #ffffff;
  background: #007AFF;
  border-radius: 8rpx;
}