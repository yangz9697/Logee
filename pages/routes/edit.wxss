.container {
  min-height: 100vh;
  background: #f7f8fa;
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}

.divider {
  height: 24rpx;
}

.delete-title {
  color: #ee0a24 !important;
}

.footer-action {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #ffffff;
  padding: 24rpx 32rpx calc(24rpx + env(safe-area-inset-bottom));
  box-shadow: 0 -2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.footer-btn {
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
  font-size: 28rpx;
  color: #ffffff;
  background: #007AFF;
  border-radius: 8rpx;
}

.station-section {
  padding: 32rpx;
}

.station-group {
  margin-bottom: 40rpx;
}

.station-group:last-child {
  margin-bottom: 0;
}

.station-label {
  font-size: 28rpx;
  color: #323233;
  margin-bottom: 24rpx;
  font-weight: 500;
}

.destination-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 24rpx;
}

.grid-item {
  width: calc((100% - 48rpx) / 3);
  height: 64rpx;
}

.grid-item view {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f7f8fa;
  border-radius: 4rpx;
}

.grid-item.active view {
  background: #e8f3ff;
  color: #007AFF;
}

.city-name {
  font-size: 28rpx;
  color: #323233;
}

.grid-item.active view .city-name {
  color: #007AFF;
}

.popup-container {
  padding-bottom: env(safe-area-inset-bottom);
}

.popup-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.popup-title {
  font-size: 32rpx;
  color: #323233;
  font-weight: 500;
}

.popup-close {
  font-size: 28rpx;
  color: #969799;
}

.site-list {
  max-height: 60vh;
  overflow-y: auto;
}

.site-item {
  padding: 32rpx;
  border-bottom: 2rpx solid #f5f5f5;
}

.site-item.active {
  background: #f7f8fa;
}

.site-item.active .site-name {
  color: #007AFF;
}

.site-name {
  font-size: 28rpx;
  color: #323233;
  margin-bottom: 8rpx;
}

.site-address {
  font-size: 24rpx;
  color: #969799;
} 